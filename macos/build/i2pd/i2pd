# See full license text in LICENSE file at top of project tree

screenfind=$(which screen)
if [ -z $screenfind ]; then
		echo "Can't find 'screen' installed. That script needs it!";
		exit 1;
fi

screen -Adm -S i2pd ./i2pd-osx --datadir=.
